rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User can only access their own data
    match /users/{userId} {
      // Allow read/write only if authenticated and accessing own data
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Tasks subcollection
      match /tasks/{taskId} {
        // Allow read/write only if authenticated and accessing own data
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // Validate task data structure
        allow create: if request.auth != null
                      && request.auth.uid == userId
                      && request.resource.data.keys().hasAll(['text', 'segment', 'checked'])
                      && request.resource.data.text is string
                      && request.resource.data.text.size() > 0
                      && request.resource.data.text.size() <= 140
                      && request.resource.data.segment is int
                      && request.resource.data.segment >= 1
                      && request.resource.data.segment <= 5
                      && request.resource.data.checked is bool;

        // Validate update data
        allow update: if request.auth != null
                      && request.auth.uid == userId
                      && request.resource.data.text.size() <= 140
                      && request.resource.data.segment >= 1
                      && request.resource.data.segment <= 5;
      }
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
