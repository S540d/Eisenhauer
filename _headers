# Cache Control Headers for GitHub Pages
# Note: GitHub Pages has limited support for custom headers
# These are suggestions - actual behavior depends on GitHub's CDN

# Service Worker - always revalidate
/service-worker.js
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# HTML - check for updates frequently
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Root index
/
  Cache-Control: public, max-age=0, must-revalidate

# CSS/JS - short cache with revalidation
/*.css
  Cache-Control: public, max-age=3600, must-revalidate

/*.js
  Cache-Control: public, max-age=3600, must-revalidate

# Images - longer cache
/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

# Manifest
/manifest.json
  Cache-Control: public, max-age=0, must-revalidate
